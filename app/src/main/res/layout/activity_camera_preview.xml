<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".CameraPreviewActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Fish Image Detector"
        android:textColor="#121111"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/photoImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/fish"
        />

    <TextView
        android:id="@+id/suitableSayingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Upload or Capture a photo to know the fish is poisonous or not!"
        android:textColor="#0E0E67"
        android:textSize="18sp" />

    <Button
        android:id="@+id/galleryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_background"
        android:text="Choose from Gallery"
        android:textColor="@color/white"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/cameraButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_button_background"
        android:text="Capture Photo"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/predictionTextView"
        android:layout_width="368dp"
        android:layout_height="84dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:text="Prediction Will Appear Here..........."
        android:background="@drawable/rounded_textview_background"
        android:textColor="#EAE6E6"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/inspirationalTextView"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="Dive into the depths of creativity and capture stories that thrive beneath the waves."
        android:textColor="#337373"
        android:textSize="16sp" />

</LinearLayout>
