<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FishDetailActivity">

    <ImageView
        android:id="@+id/detailFishImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/detailFishName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailFishImage"
        android:padding="16dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Add description TextView -->
    <TextView
        android:id="@+id/detailFishName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailFishImage"
        android:padding="16dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detailFishDescription"
        android:layout_width="344dp"
        android:layout_height="271dp"
        android:layout_below="@id/detailFishName"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="45dp"
        android:padding="16dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/detailFishName3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailFishImage"
        android:layout_marginTop="415dp"
        android:padding="16dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Add more views as needed for additional fish details -->

</RelativeLayout>
